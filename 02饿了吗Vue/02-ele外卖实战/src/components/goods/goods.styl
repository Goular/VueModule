@import "../../common/stylus/mixin.styl"
.goods
  display: flex
  position: absolute
  top 174px
  bottom: 46px
  width: 100%
  overflow: hidden
  .menu-wrapper
    flex: 0 0 80px
    width: 80px
    background: #f3f5f7
    .menu-item
      display: table
      width: 56px
      height: 54px
      line-height: 14px
      padding: 0 12px
      .icon
        display: inline-block
        width: 12px
        height: 12px
        vertical-align: top
        margin-right: 4px
        background-size: 12px 12px
        background-repeat: no-repeat
        &.decrease
          bg-image('./img/decrease_3')
        &.discount
          bg-image('./img/discount_3')
        &.guarantee
          bg-image('./img/guarantee_3')
        &.invoice
          bg-image('./img/invoice_3')
        &.special
          bg-image('./img/special_3')
      .text
        display: table-cell
        width: 56px
        vertical-align: middle
        border-1px(rgba(7, 17, 27, 0.1))
        font-size: 12px
  .foods-wrapper
    flex: 1
